
<%= form_tag({controller: 'api/adventures', action: 'update'}, method: 'post', remote: true, role: 'form', id: 'shakeForm') do %>
  
  <div class ="form-group location">
    <p>Where are you located?</p>

    <%= label_tag :location, 'Location' %>
    <%= text_field_tag 'location', nil, class: "form-control" %>
  </div> 

  <div class="filter hide">
    <div class="form-group">

  <p>Choose a Category:</p>
  <div class="form-group">
    <%= label_tag :sports, 'Sports & Outdoors' %>
    <%= check_box_tag 'category[sports_outdoors]', 'SPORTS_OUTDOORS', true, class: "form-control" %>
  </div>

     <div class="checkbox">
      <%= label_tag :luxury, 'Luxury & Exotic' %>
      <%= check_box_tag 'category[luxury_exotic]', 'LUXURY_EXOTIC', true, class: "form-control" %>
    </div>

    <div class="checkbox">
      <%= label_tag :sightseeing, 'Sightseeing & Tours' %>
      <%= check_box_tag 'category[sightseeing_tours]', 'SIGHTSEEING_TOURS', true, class: "form-control" %>
    </div>

    <div class="checkbox">
      <%= label_tag :cultural, 'Cultural & Urban' %>
      <%= check_box_tag 'category[cultural_urban]', 'CULTURAL_URBAN', true, class: "form-control" %>
    <br/>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :duration, 'Choose a time range:' %>
    <div id='slider-range'></div>
    <%= text_field_tag 'duration', nil, class: "form-control", id: 'duration' %>
  </div>

  <%= label_tag :price_range, 'Choose a price range:' %>
  <div class="form-group">
    <div class="filterField">
      <label>Price:</label>
      <div id='slider'></div>
      <%= text_field_tag 'slider', nil, class: 'form-control', id: 'price_range' %>
    </div>
  </div>
</div>

  <%= submit_tag nil, :class => 'btn btn-default locationForm', :id => 'shakeFormBtn', :value => "Start Adventure" %>
<% end %>

